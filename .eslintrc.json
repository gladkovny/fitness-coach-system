{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["scripts/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      }
    },
    {
      "files": ["tests/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      }
    }
  ]
}
